class CategoryController < ApplicationController
  def index
    @categories = Category.all
    @page_title = 'Category'
  end
  def show
    @category = Category.find(params[:id])
  end
  def new
    @category = Category.new
  end
  def create
    if Category.add(category_params)
      flash[:error] = 'created'
      redirect_to :action => 'index'
    else
      flash[:error] = 'Failed!'
      render('new')
    end
  end
  def edit
    @id = params[:id]
    @category = Category.find(params[:id])
  end
  def update
    @category = Category.find(params[:id])
    if Category.update_data(category_params, @category)
      flash[:error] = 'updated'
      redirect_to :action => 'index'
    else
      flash[:error] = 'Failed!'
      render('edit')
    end
  end
  def delete
    @category = Category.find(params[:id])
    if @category.delete
      flash[:notice] = 'deleted!'
    else
      flash[:error] = 'Failed!'
    end
    redirect_to :action => 'index'
  end

  private
  def category_params
    params.require(:category).permit(:category_name)
  end
end
