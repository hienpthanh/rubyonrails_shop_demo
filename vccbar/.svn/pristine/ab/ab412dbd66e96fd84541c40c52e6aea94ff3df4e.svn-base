class SupplierController < ApplicationController
  def index
    @supplier = Supplier.where('del_flg = 0')
    @title_supplier = 'Supplier'
  end

  def new
    @supplier = Supplier.new
  end
  def create
    if Supplier.add(supplier_params)
      flash[:error] = 'created'
      redirect_to :action => 'index'
    else
      flash[:error] = 'Failed!'
      render('new')
    end
  end
  def edit
    @id = params[:id]
    @supplier = Supplier.find(params[:id])
  end
  def update
    @supplier = Supplier.find(params[:id])
    if Supplier.update_data(supplier_params, @supplier)
      flash[:error] = 'updated'
      redirect_to :action => 'index'
    else
      flash[:error] = 'Failed!'
      render('edit')
    end
  end
  def delete
    @supplier = Supplier.find(params[:id])
    if Supplier.remove_data(@supplier)
      flash[:notice] = 'deleted!'
    else
      flash[:error] = 'Failed!'
    end
    redirect_to :action => 'index'
  end

  private
  def supplier_params
    params.require(:supplier).permit(:supplier_name)
  end
end
