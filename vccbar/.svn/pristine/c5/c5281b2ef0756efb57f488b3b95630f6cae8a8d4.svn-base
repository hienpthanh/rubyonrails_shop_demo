<!-- start: PAGE CONTENT -->
<!-- <p id="notice"><%= notice %></p> -->
<!-- <p><%= link_to "New Product", new_product_path, class: "btn btn-green btn-square" %></p> -->
<p class="text-right">
<%= link_to(new_product_path, :class=>"btn btn-primary btn-squared") do %>
  Thêm
  <i class="icon-plus"></i>
<% end %>
</p>
<div class="row">
  <div class="col-md-12">
    <!-- start: DYNAMIC TABLE PANEL -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="icon-external-link-sign"></i>
        Danh Sách Sản Phẩm
        <div class="panel-tools">
          <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
          </a>
          <a class="btn btn-xs btn-link panel-expand" href="#">
            <i class="icon-resize-full"></i>
          </a>
        </div>
      </div>
      <div class="panel-body">
        <% if notice != nil%>
          <div class="alert alert-success">
            <button data-dismiss="alert" class="close">
              ×
            </button>
            <i class="icon-ok-sign"></i>
            <%= notice %>
        </div>
        <% end %>
        <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
          <thead>
          <tr id="header">
            <th width="5%">STT</th>
            <th width="8%">Mã</th>            
            <th width="25%">Sản Phẩm</th>
            <th width="16%">Danh Mục</th>
            <th width="10%">Giá</th>
            <th width="10%">Giảm Giá</th>
            <th width="8%">Đơn Vị</th>
            <th width="8%">Trạng Thái</th>
            <th width="10%">Action</th>
          </tr>
          </thead>
          <tbody>
          <% count = 1 %>
          <%- @products.each do |product| %>
            <tr>
              <td class="text_center"><%= count %></td>
              <td><%= product.product_code %></td>
              <td class="td_word_break"><%= product.product_name %></td>    
              <td><%= product.category_name %></td>          
              <td class="text_right list_price"><label id="price<%= count -1 %>"><%= number_with_delimiter(product.price) %></lable></td>
              <td class="text_right list_price_special"><label id="price_special<%= count -1 %>"><%= number_with_delimiter(product.price_special) %></lable></td>
              <td><%= product.unit_name %></td>
              <!-- <td><%= hidden_field_tag :is_active, 'false' %>
                  <%= check_box_tag :is_active, true, product.is_active? %>
              </td> -->
              <td class="text_center">
                <% if product.is_active %>
                  <%= link_to("products/active/#{product.product_id}", data: { confirm: 'Are you sure?' }) do %>
                      <i class="clip-checkmark-circle-2"> </i>
                  <% end %>
                <% else %>
                  <%= link_to("products/active/#{product.product_id}", data: { confirm: 'Are you sure?' }) do %>
                      <i class="clip-close"> </i>
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= link_to(product, :class=>"btn btn-green btn-xs") do %>
                    <i class="clip-eye"></i>
                <% end %>
                <!-- <%= link_to 'Show', product %> -->
                <%= link_to(edit_product_path(product), :class=>"btn btn-primary btn-xs") do %>
                    <i class="icon-edit"></i>
                <% end %>
                <%= link_to("products/delete/#{product.product_id}", data: { confirm: 'Are you sure?' }, :class=>"btn btn-bricky btn-xs") do %>
                    <i class="glyphicon glyphicon-remove-circle"></i>
                <% end %>
                <!-- <%= link_to 'Edit', edit_product_path(product) %>
                <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td> -->
            </tr>
            <% count += 1 %>
          <% end %>
          </tbody>
        </table>
        <p><%= will_paginate @orders %></p>
      </div>
    </div>
    <!-- end: DYNAMIC TABLE PANEL -->
  </div>
</div>
<!-- end: PAGE CONTENT-->
