 <!-- start: PAGE CONTENT -->
<div class="row">
  <div class="col-sm-6"> 
    <p>
      <%= link_to("/unit", :class=>"btn btn-teal btn-squared") do %>
        <i class="icon-arrow-left"></i>
        Trở Về  
      <% end %>
    </p>
  </div>
  <div class="col-sm-6 text-right">
  </div>
</div> 
<!-- start: PAGE CONTENT -->
<div class="row">
  <div class="col-md-12">
    <!-- start: DYNAMIC TABLE PANEL -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="icon-external-link-sign"></i>
        Cập Nhật Đơn Vị
      </div>
      <div class="panel-body">
          <%= form_for(:unit, :url => {:action=>'update', :id => @unit[:unit_id]}) do |f| %>
          <div class="row">
              <div class="col-sm-3 form-group">
                 <label>Tên Đơn Vị:</label><span class="symbol required"></span><br>
                <%= f.text_field :unit_name, :class => 'form-control' %>
              </div>
          </div>
          <div class="row">
            <p class="col-sm-12">
              <%= f.submit(:class => 'btn btn-info btn-squared', :value=>'Lưu',:id => 'btnSubmit') %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
    <!-- end: DYNAMIC TABLE PANEL -->
  </div>
</div>
<!-- end: PAGE CONTENT-->
<script type="text/javascript">

  $('#btnSubmit').click(function(e){
    e.preventDefault();
    if(is_valid()){      
      $('form').submit();
    }
    return;
  });

  function is_valid(){
    $('.error').remove();
    $('.has-error').removeClass('has-error');

    var valid = true;

    if(!$('#unit_unit_name').val()){
      valid = false;
      $('#unit_unit_name').parents('.form-group').addClass('has-error');
      $('#unit_unit_name').after('<span for="unit_unit_name" class="help-block error">Vui Lòng Nhập</span>');
    }
    return valid;
  }
</script>