<!-- start: PAGE CONTENT -->
<p class="text-right">
<%= link_to(new_supplier_path, :class=>"btn btn-primary btn-squared") do %>
  Thêm
  <i class="icon-plus"></i>
<% end %>
</p>
<div class="row">
  <div class="col-md-12">
    <!-- start: DYNAMIC TABLE PANEL -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="icon-external-link-sign"></i>
        Danh Sách Nhà Cung Cấp
        <div class="panel-tools">
          <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
          </a>
          <a class="btn btn-xs btn-link panel-expand" href="#">
            <i class="icon-resize-full"></i>
          </a>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
          <thead>
          <tr>
            <th width="5%">STT</th>
            <th>Tên Nhà Cung Cấp</th>
            <th width="12%">Người Tạo</th>
            <th width="12%">Ngày Tạo</th>
            <th width="12%">Người Cập Nhật</th>
            <th width="12%">Ngày Cập Nhật</th>
            <th width="8%">Action</th>
          </tr>
          </thead>
          <tbody>
          <%- @supplier.each_with_index do |supplier, i| %>
            <tr>
              <td class="center"><%= (i+1)	 %></td>
              <td><%= supplier.	supplier_name	 %></td>
              <td><%= supplier. created_by  %></td>
              <td><%= supplier.created_date.strftime("%d-%m-%Y %H:%M:%S") %></td>
              <td><%= supplier. modified_by  %></td>
              <td><%= supplier.modified_date.strftime("%d-%m-%Y %H:%M:%S") %></td>
              <td>
                <a class="btn btn-primary btn-xs" href="/supplier/<%= supplier.supplier_id %>">
                  <i class="icon-edit"></i>
                </a>
                <a data-confirm="Are you sure?" data-method="delete" class="btn btn-bricky btn-xs" href="/supplier/<%= supplier.supplier_id %>">
                  <i class="glyphicon glyphicon-remove-circle"></i>
                </a>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
          <p><%= will_paginate @orders %></p>
      </div>
    </div>
    <!-- end: DYNAMIC TABLE PANEL -->
  </div>
</div>
<!-- end: PAGE CONTENT-->
